
@{
    ViewBag.Title = @CSWSWEBResources.Resource.Quote;
    ViewBag.BKImagHolder = "<div class=\"background_image_holder quote_img\">";
    Layout = "~/Views/Shared/_csLayout.cshtml";
}
@Styles.Render("~/Content/quote.css")



<table class="container_table">
    <tr>
        <td>
            <table class="quote_table">
                <tr>
                    <td class="td_navigate_holder">
                        <!--<div class="navigate_holder"> <a class="prev prev-stage" id="prev_quote" feature_tag="quotes_results"><span>&lsaquo;</span></a></div>-->

                        <div class="navigate_holder"> <a href="#" class="prev prev-stage btnRotateQT" direction="prev"><img class="img_arrow" src="~/images/arrow_prev.jpg"></a></div>

                    </td>
                    <td class="td_middle_holder">
                        <div class="middle_holder">
                            <div class="quote_of_day_title_holder"><span id="quote_type">Wine</span> @CSWSWEBResources.Resource.Quotes</div>
                            <div class="row  row_holder right_details_holder">
                                <div class="big_portrait_holder col-md-4"><img id="img_large_portrait" src=""></div>
                                <div class="portrait_holder search_portrait_holder col-md-8">
                                    <div class="result_quote_holder quote_holder col-md-12">
                                        <table class="quote_detail_table">
                                            <tr>
                                                <td class="qoute_detail_text">

                                                    <div id="quote_text"></div><div id="publication"></div>

                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="author_holder"><span class="author_dot">....................&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><span id="quote_author"></span><span class="author_dot"> &nbsp;&nbsp;&nbsp;&nbsp;....................</span></div>
                                    <div class="career_holder career_holder_on2nd" id="career"></div>
                                    <!--<div class="life_holder row row_holder">
                                        <div class="col-md-5 birth_holder" id="birth_info">Born: July 26,1894 Gidamine, Surrey, Engliand</div>
                                        <div class="col-md-2 bar_holder">&nbsp;|&nbsp;</div>
                                        <div class="col-md-5 dieth_holder" id="death_info">Died: November 22, 1963 Los Angeles, California</div>
                                    </div>-->

                                    <div class="life_holder row row_holder life_info_1">
                                        <div class="col-md-12 life_holder" id="life_info"></div>

                                    </div>
                                    <div class="life_holder row row_holder life_info_all">
                                        <div class="col-md-5 birth_holder" id="birth_info"></div>
                                        <div class="col-md-2 bar_holder">&nbsp;|&nbsp;</div>
                                        <div class="col-md-5 dieth_holder" id="death_info"></div>
                                    </div>

                                    <div class="notable_holder notable_on2nd"><span class="notable_details" id="notable_work"></span></div>

                                    <div class="row buttons_holder buttons_holder_result">
                                        <div class="share_holder col-md-6" id="qt_numbers"><span id="current_qoute"></span> @CSWSWEBResources.Resource.Of <span id="total_quotes"></span> @CSWSWEBResources.Resource.Quotes_MSG</div>
                                        <a class="search_quote_link" href="@Url.Action("../Quote")"><div class="search_holder col-md-6"><img src="~/images/search-icon.png">@CSWSWEBResources.Resource.SearchQuote</div></a>
                                    </div>
                                </div>
                            </div><!-- row_holder ends here-->

                        </div>
                    </td><!-- middle td ends here-->
                    <td class="td_navigate_holder">
                        <!--<div class="navigate_holder"><a class="next next-stage" id="next_quote" feature_tag="quotes_results"><span>&rsaquo;</span></a></div>-->
                        <div class="navigate_holder"> <a href="#" class="next next-stage btnRotateQT" direction="next" feature_tag="quotes_results"><img class="img_arrow" src="~/images/arrow_next.jpg"></a></div>
                    </td>
                </tr>
            </table><!-- quote talbe ends here-->
        </td>
    </tr>
</table><!-- container table ends here-->

<input type="hidden" id="quote_id" value="0" />
<input type="hidden" id="quote_ids" value="0" />
<input type="hidden" id="total_qts" value="0" />
<input type="hidden" id="current_index" value="0" />
<input type="hidden" id="cursor_id" value="0" />
<input type="hidden" id="isSearchQuote" value="0" />

@Scripts.Render("~/js/quote.js")