
@{
    ViewBag.Title = @CSWSWEBResources.Resource.ArtGallery;
    ViewBag.BKImagHolder = "<div>";
    ViewBag.isGallery = 1;
    Layout = "~/Views/Shared/_csLayoutNoMenuHolder.cshtml";
}
@Styles.Render("~/Content/aboutus.css")

@Styles.Render("~/Content/jcarousel.connected-carousels.css")
@Styles.Render("~/Content/jquery.selectBoxIt.css")

<input class="display_year" type="hidden" value="2018" />

<div class="wrapper">
    <div class="connected-carousels">
        <div class="stage">
            <div class="carousel carousel-stage">
                <ul></ul><!-- gallery images go here-->
                <div class="fade-left"></div>
                <div class="fade-right"></div>
            </div>

            <a href="#" class="prev prev-stage"><span>&lsaquo;</span></a>
            <a href="#" class="next next-stage"><span>&rsaquo;</span></a>
        </div>
        <div class="imageText"></div>
        <div class="imageText-prev"></div>
        <div class="shareData"></div>

        <div class="shareContainer">
            <div class="divShare"><a href="share.html" class="Sharelink">@CSWSWEBResources.Resource.ShareHR</a></div>
            <div class="spCboYear styled-select blue semi-square">
                <select class="cmbYears">
				<option value="2019" selected>2019</option>
                    <option value="2018">2018</option>
                    <option value="2017">2017</option>
                    <option value="2016">2016</option>
                    <option value="2015">2015</option>
                    <option value="2014">2014</option>
                    <option value="2013">2013</option>
                    <option value="2012">2012</option>
                </select>
            </div>
        </div>
        <div class="navigation">
            <a href="#" class="prev prev-navigation">&lsaquo;</a>
            <a href="#" class="next next-navigation">&rsaquo;</a>
            <div class="carousel carousel-navigation">
                <ul></ul>
            </div>
        </div>
    </div>
    <div class="years">
	<a href="#" class="year active" id="2019">2019</a>
        <a href="#" class="year" id="2018">2018</a>
        <a href="#" class="year" id="2017">2017</a>
        <a href="#" class="year" id="2016">2016</a>
        <a href="#" class="year" id="2015">2015</a>
        <a href="#" class="year" id="2014">2014</a>
        <a href="#" class="year" id="2013">2013</a>
        <a href="#" class="year" id="2012">2012</a>
    </div>
    <div class="busy-indicator">
        @CSWSWEBResources.Resource.LoadingImg...
    </div>
</div>          <!-- /wrapper -->
