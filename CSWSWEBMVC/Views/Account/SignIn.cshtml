
@{
    ViewBag.Title = @CSWSWEBResources.Resource.SignIn;
    ViewBag.BKImagHolder = "<div class=\"background_image_holder signin_img\">";
    Layout = "~/Views/Shared/_csLayout.cshtml";
}
@Styles.Render("~/Content/signup.css")
<div class="signin_space"></div>
<div class="signin_content signin_opactiy">
    <form name="frm_signin" id="frm_signin">
        <div class="content-middle-holder">
            <div class="signup_title signin_text_holder @CSWSWEBResources.Resource.CSSTitleFontSize">@Html.Raw(@CSWSWEBResources.Resource.SignInTitle)</div>


            <div class="signup_title control_holder">
                <input type="email" class="signup_control signin_input" name="email" placeholder="@CSWSWEBResources.Resource.EmailAddress" id="input_email" title="@CSWSWEBResources.Resource.EmailAddress" required oninvalid="setCustomValidity('@CSWSWEBResources.Resource.PleaseEnterValidEmail')" oninput="setCustomValidity('')" onchange="setCustomValidity('')" />
            </div>
        </div>

        <div class="signup_title control_holder">
            <input type="password" class="signup_control signin_input" name="password" placeholder="@CSWSWEBResources.Resource.Password" id="input_pass" pattern=".{0-9}|.{6,}" title="@CSWSWEBResources.Resource.Password" required oninvalid="setCustomValidity('@CSWSWEBResources.Resource.PleaseEnterValidPswd')" oninput="setCustomValidity('')" />
        </div>
        <div class="signup_title control_holder remeber_text_holder">
        <table class="table_remember_controls"><tr><td class="td_signin_remember_chkbox"><input id="isSend" type="checkbox" checked class="sendCheckbox" /></td><td class="td_remember_text">@CSWSWEBResources.Resource.SignupRemember</td></tr></table>
      </div>

        <div class="signup_title control_holder"> <button type="submit" formmethod="post" class="btn btn-xs btn-danger signup_submit btn_signin">@CSWSWEBResources.Resource.SignIn</button></div>

        <input class="culture_code" type="hidden" name="culture_code" id="culture_code" value="en-ca" />
    </form>
    <div class="signup_title forgotpswd_holder"><a href="@Url.Action("/ForgetPassword")">@CSWSWEBResources.Resource.ForgotPswd?</a></div>

    <div class="signup_title nothave_acnt_holder">@CSWSWEBResources.Resource.SignInDHAct?</div>

    <div class="signup_title sign_up_now_holder"> <button class="btn btn-xs btn-danger btn_signup">@CSWSWEBResources.Resource.SignUpNow</button></div>

</div><!--div class="content"-->
       

@Scripts.Render("~/js/signup.js")
